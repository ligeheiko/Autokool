@using Autokool.Pages.Common.Aids
@using Autokool.Pages.Common.Extensions
@{
    Layout = "_Layout";
    ViewData["Title"] = Model.PageTitle;
    var itemId = Model.ItemId;
}

<p>
    <h1>@ViewData["Title"]</h1>
</p>

<div>
    <h4>Confirm Cancellation</h4>
    <hr />
    <dl class="row">
        @RenderBody()
    </dl>
</div>
<div class="row">
    <div class="col-md-4">
        <form id="createForm"
              asp-page-handler="Edit"
              asp-route-sortorder="@Model.SortOrder"
              asp-route-fixedFilter="@Model.FixedFilter"
              asp-route-fixedValue="@Model.FixedValue"
              asp-route-pageIndex="@Model.PageIndex"
              asp-route-id="@itemId"
              method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @RenderBody()

            <input id="createButton" type="submit" value="Confirm" class="btn btn-primary" />
        </form>
        @Html.BackTo(
    new Args(
        null,
        null,
        Model.FixedFilter,
        Model.FixedValue,
        Model.SortOrder,
        Model.SearchString,
        Model.PageIndex
    ))
    </div>
</div>