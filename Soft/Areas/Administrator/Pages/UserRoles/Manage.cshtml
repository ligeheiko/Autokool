@using Autokool.Pages.Common.Aids
@using Autokool.Pages.Common.Extensions
@model Autokool.Pages.Autokool.Admin.UserRolesAdminPage

@{ Layout = "_Layout"; }

<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>Manage User Roles</h2>
            Add/Remove Roles for User
            1=Student, 2=Teacher, 3=Administrator, 4=SuperAdmin
        </div>
        <div class="card-body">
            @foreach (var role in Model.UserRolesList)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for=@role.RoleId />
                    <input type="hidden" asp-for="@role.RoleName" />
                    <input name="selected" checked="@role.Selected" asp-for="@role.Selected" class="form-check-input" />
                    <label id="checkbox" name="selected" class="form-check-label" asp-for="@role.Selected">
                        @role.RoleName
                    </label>
                </div>
                
            }
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-primary"
                   style="width:auto" />
            @Html.BackTo(
           new Args(
               null,
               null,
               Model.FixedFilter,
               Model.FixedValue,
               Model.SortOrder,
               Model.SearchString,
               Model.PageIndex))
        </div>
    </div>
    <div>
    </div>
</form>
